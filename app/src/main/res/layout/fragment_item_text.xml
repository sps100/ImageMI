<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_text_height"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_text_margin"
        android:text="4月13日"
        android:textColor="@color/colorContentFont" />

    <TextView
        android:id="@+id/line"
        android:layout_width="@dimen/space_line_height"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/item_text_margin"
        android:layout_marginTop="@dimen/item_text_margin"
        android:background="@color/colorSpaceLine" />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_text_margin"
        android:layout_weight="1"
        android:text="杭州"
        android:textColor="@color/colorContentFont" />
</LinearLayout>
